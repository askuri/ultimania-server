{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "schedule": [
        "on friday"
    ],
    "timezone": "UTC",
    "composer": {
        "rangeStrategy": "bump"
    },
    "packageRules": [
        // Don't update PHP version in composer.json
        {
            "matchPackageNames": ["php"],
            "enabled": false
        },
        {
            "groupName": "All dependencies",
            "groupSlug": "all-deps",
            "matchPackagePatterns": ["*"]
        }
    ],
    "automerge": false,
    "prConcurrentLimit": 1,
    "prHourlyLimit": 1
}
